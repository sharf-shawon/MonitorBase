# General timezone setting for all services
TZ=America/New_York

# Beszel Agent Configuration
# SSH public key for the Beszel agent
BESZEL_AGENT_KEY="your_ssh_public_key_here"
# Token for Beszel agent authentication
BESZEL_AGENT_TOKEN="your_beszel_agent_token_here"
# URL of the Beszel hub
BESZEL_AGENT_HUB_URL="https://your.beszel.hub"

# AWS S3 Backup Configuration (for Docker Volume Backup)
# Name of the S3 bucket for backups
AWS_S3_BUCKET_NAME="your-s3-bucket-name"
# AWS Access Key ID for S3 access
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
# AWS Secret Access Key for S3 access
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
# S3 Endpoint URL (e.g., for Backblaze B2 or other S3-compatible storage)
AWS_S3_ENDPOINT="s3.your-s3-compatible-endpoint.com"
